            <img src="~/Content/images/paneer-tikka.jpeg" width="500" height="500" alt="Second slide">
        </div>
        <div class="item">
            <img src="~/Content/images/pizza.jpeg" width="500" height="500" alt="Third slide">
        </div>
    </div>
