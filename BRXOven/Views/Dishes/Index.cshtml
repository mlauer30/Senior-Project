@model IEnumerable<BRXOven.Models.Dish>

@{
    ViewBag.Title = "Inventory";
}

<h2>Inventory</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceSell)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumSold)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceSell)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumSold)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
